{
  "extends": ["config:base"],
  "reviewers": ["spences10"],
  "bumpVersion": "patch",
  "baseBranches": ["patch"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": "schedule:monthly"
  },
  "packageRules": [
    {
      "packagePatterns": ["gatsby^"],
      "extends": {
        "schedule": "before 3am on the first day of the month"
      }
    }
  ]
}
